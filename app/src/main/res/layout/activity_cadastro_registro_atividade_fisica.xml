<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.CadastroRegistroAtividadeFisicaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_cadastro_registro_atividade_fisica_tv_dias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_cadastro_registro_atividade_fisica_dias"/>
            <Spinner
                android:id="@+id/activity_cadastro_registro_atividade_fisica_spn_dias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_cadastro_registro_atividade_fisica_tv_tempo"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@string/activity_cadastro_registro_atividade_fisica_tempo"/>
            <EditText
                android:id="@+id/activity_cadastro_registro_atividade_fisica_et_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/activity_cadastro_registro_atividade_fisica_tv_tipo_atividade"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:text="@string/activity_cadastro_registro_atividade_fisica_tipo_atividade"/>
            <CheckBox
                android:id="@+id/activity_cadastro_registro_atividade_fisica_chk_atividades_alongamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="adicionarAtividade"
                android:text="@string/activity_cadastro_registro_atividade_fisica_atividades_alongamento"/>
            <CheckBox
                android:id="@+id/activity_cadastro_registro_atividade_fisica_chk_aerobico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="adicionarAtividade"
                android:text="@string/activity_cadastro_registro_atividade_fisica_aerobico"/>
            <CheckBox
                android:id="@+id/activity_cadastro_registro_atividade_fisica_chk_musculacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="adicionarAtividade"
                android:text="@string/activity_cadastro_registro_atividade_fisica_musculacao"/>
            <CheckBox
                android:id="@+id/activity_cadastro_registro_atividade_fisica_chk_esportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="adicionarAtividade"
                android:text="@string/activity_cadastro_registro_atividade_fisica_esportes"/>
            <Button
                android:id="@+id/activity_cadastro_registro_atividade_fisica_btn_registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_cadastro_registro_atividade_fisica_registrar"
                android:onClick="registrar"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
